<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?actionBarSize">

    <RelativeLayout
        android:layout_alignParentTop="true"
        android:background="@drawable/ic_wave_8"
        android:id="@+id/tool_bar_bg_rl"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:visibility="gone"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="-30dp"
            android:layout_alignParentTop="true"
            android:id="@+id/circle67"
            android:padding="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_romantic_tree_shape_with_heart_shaped_leaves"
            tools:ignore="ContentDescription" />




        <ImageView
            android:visibility="gone"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="-100dp"
            android:layout_marginTop="-45dp"
            android:id="@+id/circle4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/circletransparant"
            tools:ignore="ContentDescription" />
        <ImageView
            android:visibility="gone"
            android:layout_marginStart="-25dp"
            android:layout_alignParentTop="true"
            android:id="@+id/circle68"
            android:padding="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_romantic_tree_shape_with_heart_shaped_leaves"
            tools:ignore="ContentDescription" />




        <ImageView
            android:visibility="gone"
            android:layout_marginStart="-100dp"
            android:layout_marginTop="-40dp"
            android:id="@+id/circle5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/circletransparant"
            tools:ignore="ContentDescription" />
        <ImageView
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="-100dp"
            android:layout_marginTop="-70dp"
            android:id="@+id/circle6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/circletransparant"
            tools:ignore="ContentDescription" />




    </RelativeLayout>


    <RelativeLayout
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp">
        <ImageView
            android:id="@+id/backimg"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_gravity="start"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:padding="@dimen/_4sdp"
            android:tint="@color/white"
            android:layout_marginStart="@dimen/_5sdp"
            android:src="@drawable/back"
            tools:ignore="ContentDescription" />

        <com.nic.InspectionAppNew.support.MyCustomTextView
            android:layout_centerHorizontal="true"
            android:id="@+id/title_tv"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="15sp"
            tools:ignore="RelativeOverlap" />
        <ImageView
            android:id="@+id/homeimg"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_gravity="start"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/_2sdp"
            android:tint="@color/white"
            android:layout_marginEnd="@dimen/_5sdp"
            android:src="@mipmap/home_img"
            tools:ignore="ContentDescription" />

    </RelativeLayout>


</RelativeLayout>