<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customfontdemo="http://schemas.android.com/apk/res-auto"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?actionBarSize">

    <RelativeLayout
        android:layout_alignParentTop="true"
        android:background="@drawable/ic_wave_8"
        android:id="@+id/tool_bar_bg_rl"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <ImageView
            android:visibility="gone"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="-30dp"
            android:layout_alignParentTop="true"
            android:id="@+id/circle67"
            android:padding="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_romantic_tree_shape_with_heart_shaped_leaves" />




        <ImageView
            android:visibility="gone"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="-100dp"
            android:layout_marginTop="-45dp"
            android:id="@+id/circle4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/circletransparant" />
        <ImageView
            android:visibility="gone"
            android:layout_marginLeft="-25dp"
            android:layout_alignParentTop="true"
            android:id="@+id/circle68"
            android:padding="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_romantic_tree_shape_with_heart_shaped_leaves" />




        <ImageView
            android:visibility="gone"
            android:layout_marginLeft="-100dp"
            android:layout_marginTop="-40dp"
            android:id="@+id/circle5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/circletransparant" />
        <ImageView
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="-100dp"
            android:layout_marginTop="-70dp"
            android:id="@+id/circle6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/circletransparant" />




    </RelativeLayout>


    <RelativeLayout
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="@dimen/_10sdp"
            android:id="@+id/backimg"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="start"
            android:layout_alignParentStart="true"
            android:padding="@dimen/_2sdp"
            android:tint="@color/white"
            android:layout_marginLeft="@dimen/_10sdp"
            android:rotation="180"
            android:src="@drawable/ic_arrow_forward_black_24dp" />

        <com.nic.InspectionAppNew.support.MyCustomTextView
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="15sp"
             />
        <ImageView
            android:id="@+id/homeimg"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="end"
            android:padding="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/home_img"
            android:tint="@color/white"/>
    </RelativeLayout>


</RelativeLayout>