<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="adapter"
            type="com.nic.InspectionAppNew.adapter.ATRWorkListAdapter" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            app:cardCornerRadius="15dp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            app:cardElevation="@dimen/_5sdp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/button_background_light"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="UselessParent">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:visibility="visible">
                        <ImageView
                            android:layout_width="@dimen/_200sdp"
                            android:layout_height="@dimen/_200sdp"
                            android:layout_marginRight="-50dp"
                            android:layout_marginTop="-50dp"
                            android:rotation="270"

                            android:src="@drawable/circle_lite"
                            tools:ignore="ContentDescription" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/linear"
                        android:padding="@dimen/_5sdp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:weightSum="2"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:padding="@dimen/_3sdp"
                            android:id="@+id/work_layout"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.8"
                                android:layout_height="wrap_content"
                                android:id="@+id/work_h"
                                android:gravity="start"
                                android:textColor="@color/grey_10"
                                android:textSize="@dimen/_12sdp"
                                android:text="@string/work_id"
                                />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.2"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textColor="@color/grey_10"
                                android:textSize="@dimen/_12sdp"
                                android:text="@string/colan_symbol"
                                />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:id="@+id/work_id"
                                android:gravity="start"
                                android:textColor="@color/grey_8"
                                android:textSize="@dimen/_12sdp"
                                />


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:weightSum="2"
                            android:padding="@dimen/_3sdp"
                            android:id="@+id/work_name_layout"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.8"
                                android:layout_height="wrap_content"
                                android:id="@+id/work_name_h"
                                android:gravity="start"
                                android:textColor="@color/grey_10"
                                android:textSize="@dimen/_12sdp"
                                android:text="@string/work_name"
                                />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.2"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textColor="@color/grey_10"
                                android:textSize="@dimen/_12sdp"
                                android:text="@string/colan_symbol"
                                />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:id="@+id/work_name"
                                android:gravity="start"
                                android:textColor="@color/grey_8"
                                android:textSize="@dimen/_12sdp"
                                />


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:weightSum="2"
                            android:padding="@dimen/_3sdp"
                            android:id="@+id/stage_name_layout"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.8"
                                android:layout_height="wrap_content"
                                android:id="@+id/stage_name_h"
                                android:gravity="start"
                                android:textColor="@color/grey_10"
                                android:textSize="@dimen/_12sdp"
                                android:text="@string/stage_name"
                                />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.2"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textColor="@color/grey_10"
                                android:textSize="@dimen/_12sdp"
                                android:text="@string/colan_symbol"
                                />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:id="@+id/stage_name"
                                android:gravity="start"
                                android:textColor="@color/grey_8"
                                android:textSize="@dimen/_12sdp"
                                />


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:weightSum="2"
                            android:padding="@dimen/_3sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:id="@+id/work_type_name_layout"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.8"
                                android:layout_height="wrap_content"
                                android:id="@+id/work_type_name_h"
                                android:gravity="start"
                                android:textColor="@color/grey_10"
                                android:textSize="@dimen/_12sdp"
                                android:text="@string/work_type_name"
                                />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.2"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textColor="@color/grey_10"
                                android:textSize="@dimen/_12sdp"
                                android:text="@string/colan_symbol"
                                />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:id="@+id/work_type_name"
                                android:gravity="start"
                                android:textColor="@color/grey_8"
                                android:textSize="@dimen/_12sdp"
                                />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:weightSum="2"
                            android:padding="@dimen/_3sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:id="@+id/fin_year_layout"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.8"
                                android:layout_height="wrap_content"
                                android:id="@+id/fin_year_h"
                                android:gravity="start"
                                android:textColor="@color/grey_10"
                                android:textSize="@dimen/_12sdp"
                                android:text="@string/financial_year"
                                />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.2"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textColor="@color/grey_10"
                                android:textSize="@dimen/_12sdp"
                                android:text="@string/colan_symbol"
                                />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:id="@+id/fin_year"
                                android:gravity="start"
                                android:textColor="@color/grey_8"
                                android:textSize="@dimen/_12sdp"
                                />


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:weightSum="2"
                            android:padding="@dimen/_3sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:id="@+id/as_value_layout"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.8"
                                android:layout_height="wrap_content"
                                android:id="@+id/as_value_h"
                                android:gravity="start"
                                android:textColor="@color/grey_10"
                                android:textSize="@dimen/_12sdp"
                                android:text="@string/as_value"
                                />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.2"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textColor="@color/grey_10"
                                android:textSize="@dimen/_12sdp"
                                android:text="@string/colan_symbol"
                                />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:id="@+id/as_value"
                                android:gravity="start"
                                android:textColor="@color/grey_8"
                                android:textSize="@dimen/_12sdp"
                                />


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:weightSum="2"
                            android:padding="@dimen/_3sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:id="@+id/ts_value_layout"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.8"
                                android:layout_height="wrap_content"
                                android:id="@+id/ts_value_h"
                                android:gravity="start"
                                android:textColor="@color/grey_10"
                                android:textSize="@dimen/_12sdp"
                                android:text="@string/ts_value"
                                />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.2"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textColor="@color/grey_10"
                                android:textSize="@dimen/_12sdp"
                                android:text="@string/colan_symbol"
                                />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:id="@+id/ts_value"
                                android:gravity="start"
                                android:textColor="@color/grey_8"
                                android:textSize="@dimen/_12sdp"
                                />


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:weightSum="2"
                            android:padding="@dimen/_3sdp"
                            android:visibility="gone"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:id="@+id/work_status_layout"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.8"
                                android:layout_height="wrap_content"
                                android:id="@+id/work_status_h"
                                android:gravity="start"
                                android:textColor="@color/grey_10"
                                android:textSize="@dimen/_12sdp"
                                android:text="@string/work_status"
                                />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.2"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textColor="@color/grey_10"
                                android:textSize="@dimen/_12sdp"
                                android:text="@string/colan_symbol"
                                />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:id="@+id/work_status"
                                android:gravity="start"
                                android:textColor="@color/grey_8"
                                android:textSize="@dimen/_12sdp"
                                />


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:weightSum="2"
                            android:padding="@dimen/_3sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:id="@+id/work_order_date_layout"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.8"
                                android:layout_height="wrap_content"
                                android:id="@+id/work_order_date_h"
                                android:gravity="start"
                                android:textColor="@color/grey_10"
                                android:textSize="@dimen/_12sdp"
                                android:text="@string/agreement_work_orderdate"
                                />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.2"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textColor="@color/grey_10"
                                android:textSize="@dimen/_12sdp"
                                android:text="@string/colan_symbol"
                                />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:id="@+id/work_order_date"
                                android:gravity="start"
                                android:textColor="@color/grey_8"
                                android:textSize="@dimen/_12sdp"
                                />


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:weightSum="2"
                            android:padding="@dimen/_3sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:id="@+id/as_date_layout"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.8"
                                android:layout_height="wrap_content"
                                android:id="@+id/as_date_h"
                                android:gravity="start"
                                android:textColor="@color/grey_10"
                                android:textSize="@dimen/_12sdp"
                                android:text="@string/as_date"
                                />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.2"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textColor="@color/grey_10"
                                android:textSize="@dimen/_12sdp"
                                android:text="@string/colan_symbol"
                                />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:id="@+id/as_date"
                                android:gravity="start"
                                android:textColor="@color/grey_8"
                                android:textSize="@dimen/_12sdp"
                                />


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:weightSum="2"
                            android:padding="@dimen/_3sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:id="@+id/ts_date_layout"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.8"
                                android:layout_height="wrap_content"
                                android:id="@+id/ts_date_h"
                                android:gravity="start"
                                android:textColor="@color/grey_10"
                                android:textSize="@dimen/_12sdp"
                                android:text="@string/ts_date"
                                />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.2"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textColor="@color/grey_10"
                                android:textSize="@dimen/_12sdp"
                                android:text="@string/colan_symbol"
                                />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:id="@+id/ts_date"
                                android:gravity="start"
                                android:textColor="@color/grey_8"
                                android:textSize="@dimen/_12sdp"
                                />


                        </LinearLayout>

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:id="@+id/take_action"
                        android:padding="@dimen/_5sdp"
                        android:layout_alignParentTop="true">
                        <ImageView
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:id="@+id/take_action_text"
                            android:layout_centerVertical="true"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:src="@drawable/action"
                            android:textColor="@color/primary_text_color"
                            android:textSize="@dimen/_13sdp"
                            android:text="@string/take_action"
                            tools:ignore="RelativeOverlap,UnusedAttribute" />
                    </RelativeLayout>

                </RelativeLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </RelativeLayout>
</layout>



