<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="adapter"
            type="com.nic.InspectionAppNew.adapter.WorkListAdapter" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="@dimen/_5sdp"
            android:layout_alignParentStart="true"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/colorAccent"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="UselessParent">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:rotation="270"
                            android:src="@drawable/quater_circle_shape"/>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/linear"
                        android:padding="@dimen/_5sdp"
                        android:layout_below="@+id/view_offline_images"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:weightSum="2"
                            android:padding="@dimen/_3sdp"
                            android:id="@+id/work_layout"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.8"
                                android:layout_height="wrap_content"
                                android:id="@+id/work_h"
                                android:gravity="start"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_12sdp"
                                android:text="Work id"
                                />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.2"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_12sdp"
                                android:text=":"
                                />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:id="@+id/work_id"
                                android:gravity="start"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_12sdp"
                                />


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:weightSum="2"
                            android:padding="@dimen/_3sdp"
                            android:id="@+id/work_name_layout"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.8"
                                android:layout_height="wrap_content"
                                android:id="@+id/work_name_h"
                                android:gravity="start"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_12sdp"
                                android:text="Work Name"
                                />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.2"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_12sdp"
                                android:text=":"
                                />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:id="@+id/work_name"
                                android:gravity="start"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_12sdp"
                                />


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:weightSum="2"
                            android:padding="@dimen/_3sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:id="@+id/work_status_layout"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.8"
                                android:layout_height="wrap_content"
                                android:id="@+id/work_status_h"
                                android:gravity="start"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_12sdp"
                                android:text="Work Status"
                                />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="0.2"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_12sdp"
                                android:text=":"
                                />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:id="@+id/work_status"
                                android:gravity="start"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_12sdp"
                                />


                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/view_offline_images"
                        android:gravity="end"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp"
                        android:text="@string/view_image"
                        android:textStyle="bold"
                        android:layout_gravity="end"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_8sdp"
                        />

                </RelativeLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </RelativeLayout>
</layout>



